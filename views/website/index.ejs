<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Homepage</title>
  <style>
    /* Flex container for categories and carousel in the same row */
    .first-row {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 20px;
      margin-bottom: 20px;
    }

    /* Categories container styling */
    .categories {
      display: flex;
      flex-direction: column;
      gap: 10px;
      width: 20%;
    }

    .category-btn {
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: #f4f4f4;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .category-btn:hover {
      background-color: #ddd;
    }

    /* Carousel styling */
    .carousel {
      position: relative;
      width: 75%;
      max-width: 600px;
      margin: auto;
      overflow: hidden;
      border: 2px solid #ddd;
      border-radius: 8px;
    }

    .carousel-inner {
      display: flex;
      transition: transform 0.5s ease-in-out;
    }

    .carousel-item {
      min-width: 100%;
      height: 300px;
      object-fit: cover;
    }

    .carousel-control {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      font-size: 18px;
      padding: 10px;
      cursor: pointer;
      z-index: 1000;
    }

    .carousel-control.prev {
      left: 10px;
    }

    .carousel-control.next {
      right: 10px;
    }

    .carousel-control:hover {
      background-color: rgba(0, 0, 0, 0.8);
    }

    /* Product boxes */
    .product-box {
      width: 300px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      text-align: center;
      transition: transform 0.2s;
      display: inline-block;
      margin: 10px;
    }

    .product-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15); /* Enhanced hover shadow */
    }

    .image-slideshow {
      position: relative;
      height: 200px;
      background-color: #f4f4f4;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }

    .image-slideshow img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      position: absolute;
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
    }

    .image-slideshow img.active {
      opacity: 1;
    }

    .product-name {
      font-size: 1.2rem;
      margin: 10px 0;
    }

    .product-price {
      font-size: 1rem;
      color: #555;
      margin-bottom: 10px;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

  </style>
  <script>
    let currentIndex = 0;

    function moveCarousel(direction) {
      const carouselInner = document.querySelector('.carousel-inner');
      const items = document.querySelectorAll('.carousel-item');
      const totalItems = items.length;

      currentIndex = (currentIndex + direction + totalItems) % totalItems;
      const offset = -currentIndex * 100;
      carouselInner.style.transform = `translateX(${offset}%)`;
    }

    // Initialize carousel
    document.addEventListener('DOMContentLoaded', () => {
      // Auto slide every 3 seconds
      setInterval(() => moveCarousel(1), 3000);
    });

    // Script to handle the slideshow effect for products
    document.addEventListener('DOMContentLoaded', () => {
      const boxes = document.querySelectorAll('.product-box');
      boxes.forEach(box => {
        const images = box.querySelectorAll('.image-slideshow img');
        let currentIndex = 0;

        const startSlideshow = () => {
          images[currentIndex].classList.remove('active');
          currentIndex = (currentIndex + 1) % images.length;
          images[currentIndex].classList.add('active');
        };

        let interval;
        box.addEventListener('mouseenter', () => {
          interval = setInterval(startSlideshow, 3000);
        });

        box.addEventListener('mouseleave', () => {
          clearInterval(interval);
        });
      });
    });
  </script>
</head>
<body>

    <!-- First Row: Categories and Carousel -->
    <div class="first-row">
        <div class="categories">
            <% categories.forEach(category => { %>
              <button class="category-btn" onclick="filterCategory(<%= category.category_id %>)">
                <%= category.category_name %>
              </button>
            <% }) %>
        </div>
      
        <div class="carousel">
          <div class="carousel-inner">
            <img src="/images/1.png" alt="Image 1" class="carousel-item">
            <img src="/images/2.png" alt="Image 2" class="carousel-item">
            <img src="/images/3.png" alt="Image 3" class="carousel-item">
            <img src="/images/4.png" alt="Image 4" class="carousel-item">
            <img src="/images/5.png" alt="Image 5" class="carousel-item">
          </div>
          <button class="carousel-control prev" onclick="moveCarousel(-1)">&#10094;</button>
          <button class="carousel-control next" onclick="moveCarousel(1)">&#10095;</button>
        </div>
    </div>

    <!-- Product Boxes -->
    <div class="product-boxes">
      <% products.forEach(product => { %>
        <a href="/customer/product-details/<%= product.product_id %>" class="product-box">
          <div class="image-slideshow">
            <% product.product_images.forEach((image, index) => { %>
              <img src="<%= image.image_url %>" class="<%= index === 0 ? 'active' : '' %>" alt="<%= product.name %>">
            <% }) %>
          </div>
          <div class="product-name"><%= product.name %></div>
          <div class="product-price">$<%= product.price %></div>
        </a>
      <% }) %>
    </div>

</body>
</html>
