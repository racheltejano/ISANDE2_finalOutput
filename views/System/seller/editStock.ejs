<!-- seller/editStock.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Stock - <%= product.name %></title>
  <link rel="stylesheet" href="/style.css"> 
</head>
<body>
  <div class="container">
    <header>
      <h1>Edit Stock for Product: <%= product.name %></h1>
    </header>
    <main>
      <form action="/seller/edit-stock/<%= product.product_id %>" method="POST">
        <div class="form-group">
          <label for="stock">Stock Quantity</label>
          <input 
            type="number" 
            name="stock" 
            id="stock" 
            value="<%= product.stock %>" 
            min="0" 
            required 
            class="input-field"
          />
        </div>

        <!-- Validation Error Display -->
        <% if (error) { %>
          <div class="error-message">
            <p><%= error %></p>
          </div>
        <% } %>

        <button type="submit" class="submit-btn">Update Stock</button>
      </form>
    </main>

    <footer>
      <a href="/seller/out-of-stock-items">Back to Out of Stock Items</a>
    </footer>
  </div>

  <!-- Optional JavaScript for enhanced user experience -->
  <script src="/script.js"></script> <!-- Link to your JavaScript (optional) -->
</body>
</html>
