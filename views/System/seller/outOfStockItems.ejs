<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Out of Stock / Low Stock Items</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 1em;
      text-align: left;
    }
    th, td {
      padding: 12px;
      border: 1px solid #ddd;
    }
    th {
      background-color: #f4f4f4;
    }
    button {
      padding: 5px 10px;
      margin: 2px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
    }
    .restock {
      background-color: #28a745;
      color: white;
    }
    .disable {
      background-color: #dc3545;
      color: white;
    }
    h1 {
      text-align: center;
    }
  </style>
</head>
<body>
  <h1>Out of Stock / Low Stock Items</h1>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (products.length > 0) { %>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.stock %></td>
            <td>â‚±<%= product.price %></td>
            <td>
              <form method="POST" action="/seller/restock-product/<%= product.product_id %>" style="display:inline;">
                <button type="submit" class="restock">Restock</button>
              </form>
              <form method="POST" action="/seller/disable-product/<%= product.product_id %>" style="display:inline;">
                <button type="submit" class="disable">Disable</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="4" style="text-align: center;">No out-of-stock items</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
