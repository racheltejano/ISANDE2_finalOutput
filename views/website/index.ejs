<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Homepage</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      padding: 20px;
    }

    .product-box {
      width: 300px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      text-align: center;
      transition: transform 0.2s;
    }

    .product-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15); /* Enhanced hover shadow */
    }

    .image-slideshow {
      position: relative;
      height: 200px; /* Adjust to your preferred size */
      background-color: #f4f4f4; /* Neutral background */
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }

    .image-slideshow img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain; /* Ensures the image fits to frame without cropping */
      position: absolute;
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
    }

    .image-slideshow img.active {
      opacity: 1;
    }


    .product-name {
      font-size: 1.2rem;
      margin: 10px 0;
    }

    .product-price {
      font-size: 1rem;
      color: #555;
      margin-bottom: 10px;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    
  </style>
  <script>
    // Script to handle the slideshow effect
    document.addEventListener('DOMContentLoaded', () => {
      const boxes = document.querySelectorAll('.product-box');
      boxes.forEach(box => {
        const images = box.querySelectorAll('.image-slideshow img');
        let currentIndex = 0;

        const startSlideshow = () => {
          images[currentIndex].classList.remove('active');
          currentIndex = (currentIndex + 1) % images.length;
          images[currentIndex].classList.add('active');
        };

        let interval;
        box.addEventListener('mouseenter', () => {
          interval = setInterval(startSlideshow, 3000);
        });

        box.addEventListener('mouseleave', () => {
          clearInterval(interval);
        });
      });
    });
  </script>
</head>
<body>
  <% products.forEach(product => { %>
    <a href="/customer/product-details/<%= product.product_id %>" class="product-box">
      <div class="image-slideshow">
        <% product.product_images.forEach((image, index) => { %>
          <img src="<%= image.image_url %>" class="<%= index === 0 ? 'active' : '' %>" alt="<%= product.name %>">
        <% }) %>
      </div>
      <div class="product-name"><%= product.name %></div>
      <div class="product-price">$<%= product.price %></div>
    </a>
  <% }) %>
</body>
</html>
